<!DOCTYPE html>
<html lang="<%= lang %>" dir="<%= dir %>">
<%- include('../../../partials/head.ejs') %>

<body class="<%= themeClass %>">
  <div id="app">
    <div class="main-wrapper main-wrapper-1">
      <div class="navbar-bg"></div>
      <%- include('../../../partials/navbar.ejs') %>
      <%- include('../../../partials/sidebar.ejs') %>

      <!-- Main Content -->
      <div class="main-content">
        <section class="section">
                 <% if (success && success.length > 0) { %>
              <div class="alert alert-success"><%= success[0] %></div>
            <% } %>
            <% if (error && error.length > 0) { %>
              <div class="alert alert-danger"><%= error[0] %></div>
            <% } %>
          <div class="section-header">
            <h1><%= t('pendingApproval.pageTitle') %></h1>
            <div class="section-header-breadcrumb">
              <div class="breadcrumb-item active"><a href="#"><%= t('pendingApproval.breadcrumb.dashboard') %></a></div>
              <div class="breadcrumb-item"><%= t('pendingApproval.breadcrumb.companies') %></div>
              <div class="breadcrumb-item"><%= t('pendingApproval.breadcrumb.pendingApproval') %></div>
            </div>
          </div>

          <div class="section-body">
            <h2 class="section-title"><%= t('pendingApproval.sectionTitle') %></h2>
            <p class="section-lead"><%= t('pendingApproval.sectionLead') %></p>

            <div class="card">
              <div class="card-header">
                <h4><%= t('pendingApproval.cardHeader') %></h4>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-striped">
                    <thead>
                      <tr>
                        <th><%= t('pendingApproval.tableHeaders.index') %></th>
                        <th><%= t('pendingApproval.tableHeaders.companyName') %></th>
                        <th><%= t('pendingApproval.tableHeaders.email') %></th>
                        <th><%= t('pendingApproval.tableHeaders.subdomain') %></th>
                        <th><%= t('pendingApproval.tableHeaders.registeredAt') %></th>
                        <th><%= t('pendingApproval.tableHeaders.actions') %></th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if (typeof companies !== 'undefined' && companies.length > 0) { %>
                        <% companies.forEach((company, index) => { %>
                          <tr>
                            <td><%= index + 1 %></td> 
                            <td><%= company.name %></td>
                            <td><%= company.email %></td>
                            <td><%= company.subdomain %></td>
                            <td><%= company.createdAt.toLocaleDateString() %></td>
                            <td>
                              <a href="/sadmin/companies/<%= company._id %>" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i> <%= t('pendingApproval.buttons.view') %>
                              </a>

                            </td>
                          </tr>
                        <% }) %>
                      <% } else { %>
                        <tr>
                          <td colspan="6" class="text-center"><%= t('pendingApproval.noPending') %></td>
                        </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>

          </div>
        </section>
      </div>

      <!-- Footer -->
      <%- include('../../../partials/footer.ejs') %>
    </div>
  </div>

  <!-- JS Scripts -->
  <%- include('../../../partials/script.ejs') %>

</body>
</html>
