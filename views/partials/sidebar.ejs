<div class="main-sidebar sidebar-style-2">
  <aside id="sidebar-wrapper">
    <div class="sidebar-brand">
      <a href="/">TalkDesk</a>
    </div>
    <div class="sidebar-brand sidebar-brand-sm">
      <a href="/">TD</a>
    </div>

    <% if(user.role === 'superadmin') { %>
      <ul class="sidebar-menu">
        <li class="menu-header">Admin Panel</li>
        <li><a class="nav-link" href="/admin/dashboard"><i class="fas fa-fire"></i> <span>Dashboard</span></a></li>

        <li class="menu-header">Companies</li>
        <li><a class="nav-link" href="/admin/companies"><i class="fas fa-building"></i> <span>All Companies</span></a></li>
        <li><a class="nav-link" href="/sadmin/companies/pending"><i class="fas fa-hourglass-half"></i> <span>Pending Approval</span></a></li>

        <li class="menu-header">Admins</li> 
        <li><a class="nav-link" href="/admin/admins"><i class="fas fa-user-shield"></i> <span>Company Admins</span></a></li>

        <li class="menu-header">Reports</li>
        <li><a class="nav-link" href="/admin/reports"><i class="fas fa-chart-bar"></i> <span>System Reports</span></a></li>
        <li><a class="nav-link" href="/admin/logs"><i class="fas fa-clipboard-list"></i> <span>Activity Logs</span></a></li>

        <li class="menu-header">Settings</li>
        <li><a class="nav-link" href="/admin/settings"><i class="fas fa-cogs"></i> <span>Platform Settings</span></a></li>
      </ul>

    <% } else if(user.role === 'admin') { %>
      <ul class="sidebar-menu">
        <li class="menu-header">Company Panel</li>
        <li><a class="nav-link" href="/dashboard"><i class="fas fa-fire"></i> <span>Dashboard</span></a></li>

        <li class="menu-header">Channels</li>
        <li><a class="nav-link" href="/channels/general"><i class="fas fa-hashtag"></i> <span># general</span></a></li>
        <li><a class="nav-link" href="/channels/random"><i class="fas fa-hashtag"></i> <span># random</span></a></li>
        <li><a class="nav-link" href="/channels/new"><i class="fas fa-plus"></i> <span>Create Channel</span></a></li>

        <li class="menu-header">Direct Messages</li>
        <% directMessages.forEach(dm => { %>
          <li><a class="nav-link" href="/chat/<%= dm.chatId %>"><i class="fas fa-user"></i> <span><%= dm.name %></span></a></li>
        <% }) %>
        <li><a class="nav-link" href="/chats/new"><i class="fas fa-plus"></i> <span>Start New Chat</span></a></li>

        <li class="menu-header">Online Users</li>
        <% onlineUsers.forEach(u => { %>
          <li><a class="nav-link" href="/profile/<%= u.id %>"><i class="fas fa-circle text-success" style="font-size:0.7rem;"></i> <span><%= u.name %></span></a></li>
        <% }) %>

        <li class="menu-header">Settings</li>
        <li><a class="nav-link" href="/settings"><i class="fas fa-cog"></i> <span>Company Settings</span></a></li>
        <li><a class="nav-link" href="/profile"><i class="fas fa-user"></i> <span>My Profile</span></a></li>
      </ul>

    <% } else if(user.role === 'employee') { %>
      <ul class="sidebar-menu">
        <li class="menu-header">Employee Panel</li>
        <li><a class="nav-link" href="/dashboard"><i class="fas fa-fire"></i> <span>Dashboard</span></a></li>

        <li class="menu-header">Direct Messages</li>
        <% directMessages.forEach(dm => { %>
          <li><a class="nav-link" href="/chat/<%= dm.chatId %>"><i class="fas fa-user"></i> <span><%= dm.name %></span></a></li>
        <% }) %>
        <li><a class="nav-link" href="/chats/new"><i class="fas fa-plus"></i> <span>Start New Chat</span></a></li>

        <li class="menu-header">Online Users</li>
        <% onlineUsers.forEach(u => { %>
          <li><a class="nav-link" href="/profile/<%= u.id %>"><i class="fas fa-circle text-success" style="font-size:0.7rem;"></i> <span><%= u.name %></span></a></li>
        <% }) %>

        <li class="menu-header">My Department</li>
        <li><a class="nav-link" href="/my-department"><i class="fas fa-users"></i> <span>My Department</span></a></li>

        <li class="menu-header">Profile</li>
        <li><a class="nav-link" href="/profile"><i class="fas fa-user"></i> <span>My Profile</span></a></li>
      </ul>
    <% } %>
  </aside>
</div>
